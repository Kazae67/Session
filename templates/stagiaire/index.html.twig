{% extends 'base.html.twig' %}

{% block title %}Stagiaire index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Stagiaire index</h1>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>LastName</th>
                    <th>FirstName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for stagiaire in stagiaires %}
                <tr>
                    <td>{{ stagiaire.id }}</td>
                    <td>{{ stagiaire.lastName }}</td>
                    <td>{{ stagiaire.firstName }}</td>
                    <td>
                        <a href="{{ path('app_stagiaire_show', {'id': stagiaire.id}) }}">show</a>
                        <a href="{{ path('app_stagiaire_edit', {'id': stagiaire.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_stagiaire_new') }}" class="create-button">Create new</a>
    </div>
{% endblock %}
