{% extends 'base.html.twig' %}

{% block title %}Stagiaires inscrits{% endblock %}

{% block body %}
    <h1>Stagiaires inscrits pour la session {{ session.id }}</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for stagiaire in inscrits %}
                <tr>
                    <td>{{ stagiaire.id }}</td>
                    <td>{{ stagiaire.lastName }}</td>
                    <td>{{ stagiaire.firstName }}</td>
                    <td>
                        <form action="{{ path('app_session_deprogrammer', {'sessionId': session.id, 'stagiaireId': stagiaire.id}) }}" method="post">
                            <button type="submit">Déprogrammer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_session_index') }}">Retour à la liste des sessions</a>
{% endblock %}
