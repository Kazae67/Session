{% extends 'base.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
    <div class="show-container">
        <h1>Module</h1>

        <table class="show-table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ module.id }}</td>
                </tr>
                <tr>
                    <th>LabelModule</th>
                    <td>{{ module.labelModule }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ module.duration }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_module_index') }}" class="show-back-button">back to list</a>
        <a href="{{ path('app_module_edit', {'id': module.id}) }}" class="show-edit-button">edit</a>

    </div>
{% endblock %}
