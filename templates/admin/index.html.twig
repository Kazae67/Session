{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Admin index</h1>

        <table class="styled-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>LastName</th>
                    <th>FirstName</th>
                    <th>Email</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for admin in admins %}
                <tr>
                    <td>{{ admin.id }}</td>
                    <td>{{ admin.lastName }}</td>
                    <td>{{ admin.firstName }}</td>
                    <td>{{ admin.email }}</td>
                    
                    <td>
                        <a href="{{ path('app_admin_show', {'id': admin.id}) }}">show</a>
                        <a href="{{ path('app_admin_edit', {'id': admin.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_admin_new') }}" class="create-button">Create new</a>
    </div>
{% endblock %}
